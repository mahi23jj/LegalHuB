<% layout("layouts/boilerplate") %>

    <style>
        /* ‚úÖ Container Styling */
        .fun_container {
            max-width: 1080px;
            margin: 40px auto;
            padding: 32px;
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0px 8px 24px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }

        /* ‚úÖ Title Styling */
        h1,
        h2 {
            text-align: center;
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 20px;
        }

        /* ‚úÖ Search & Filter Section */
        .search-filter-box {
            display: flex;
            gap: 14px;
            margin-bottom: 28px;
            flex-wrap: wrap;
        }

        .search-filter-box input,
        .search-filter-box select {
            flex: 1;
            padding: 14px;
            border: 1px solid #dfe6e9;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
            background-color: #f9fafc;
            outline: none;
        }

        .search-filter-box input:focus,
        .search-filter-box select:focus {
            border-color: #6c5ce7;
            box-shadow: 0 0 8px rgba(108, 92, 231, 0.2);
        }

        /* ‚úÖ Updated Button Styling */
        .search-filter-box button {
            padding: 14px 24px;
            background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
            color: #ffffff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            transition: background 0.3s ease, transform 0.2s;
            box-shadow: 0px 4px 12px rgba(108, 92, 231, 0.2);
        }

        .search-filter-box button:hover {
            background: linear-gradient(135deg, #5a4ae5 0%, #8c82ff 100%);
            transform: translateY(-2px);
        }

        /* ‚úÖ Rights Card */
        .right {
            background-color: #ffffff;
            padding: 24px;
            border: 1px solid #e0e0e0;
            border-radius: 12px;
            margin-bottom: 18px;
            transition: box-shadow 0.3s ease, transform 0.2s ease;
        }

        .right:hover {
            transform: translateY(-6px);
            box-shadow: 0px 10px 28px rgba(0, 0, 0, 0.12);
        }

        .right h2 {
            font-size: 1.4rem;
            color: #2d3436;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .right p {
            font-size: 1rem;
            color: #636e72;
            line-height: 1.6;
        }

        .right a {
            display: inline-block;
            color: #6c5ce7;
            font-weight: 600;
            text-decoration: none;
            margin-top: 10px;
            transition: color 0.3s ease;
        }

        .right a:hover {
            color: #4834d4;
        }

        /* ‚úÖ Recommendations */
        .recommendations {
            display: flex;
            gap: 12px;
            justify-content: center;
            margin-top: 24px;
        }

        .recommendations button {
            background: linear-gradient(135deg, #ff6b6b, #ff9a9e);
            color: white;
            padding: 12px 18px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            transition: background 0.3s ease, transform 0.2s;
            box-shadow: 0px 4px 12px rgba(255, 107, 107, 0.2);
        }

        .recommendations button:hover {
            background: linear-gradient(135deg, #ff5252, #ff7e7e);
            transform: translateY(-2px);
        }

        /* ‚úÖ Responsive Styling */
        @media (max-width: 768px) {
            .search-filter-box {
                flex-direction: column;
                gap: 10px;
            }

            .recommendations {
                flex-direction: column;
                gap: 10px;
            }
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
            gap: 8px;
        }

        .pagination button {
            background-color: #6c5ce7;
            color: white;
            border: none;
            padding: 8px 14px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1rem;
            transition: background 0.3s ease;
        }

        .pagination button:hover {
            background-color: #5a4ae5;
        }

        .pagination .active {
            background-color: #4834d4;
            font-weight: bold;
        }
    </style>

    <section class="fun_container">
        <h1>üáÆüá≥ Fundamental Rights</h1>
        <p>Explore different fundamental rights granted to individuals.</p>

        <!-- ‚úÖ Search and Filter -->
        <div class="search-filter-box">
            <input type="text" id="search-input" placeholder="Search Rights..." aria-label="Search Rights">
            <select id="category-filter" aria-label="Filter by Category">
                <option value="">All Categories</option>
                <option value="Equality">Equality</option>
                <option value="Freedom">Freedom</option>
                <option value="Education">Education</option>
                <option value="Justice">Justice</option>
                <option value="Constitutional Remedies">Constitutional Remedies</option>
            </select>
            <button id="search-button">Search</button>
        </div>
        <!-- ‚úÖ Recommended Rights -->
        <h2>Commonly Searched</h2>
        <div class="recommendations">
            <button onclick="fetchRight('Right to Equality')">Right to Equality</button>
            <button onclick="fetchRight('Right to Freedom')">Right to Freedom</button>
            <button onclick="fetchRight('Right to Education')">Right to Education</button>
            <button onclick="fetchRight('Right Against Exploitation')">Right Against Exploitation</button>
        </div>
        <br><br>
        <!-- ‚úÖ Rights List -->
        <div class="rights-list">
            <% rights.forEach(right=> { %>
                <div class="right">
                    <h2>
                        <%= right.name %>
                    </h2>
                    <p>
                        <%= right.description.substring(0, 150) %>...
                    </p>
                    <a href="/api/rights/<%= right._id %>">Learn More ‚Üí</a>
                </div>
                <% }) %>
        </div>

        <!-- ‚úÖ Pagination -->
        <% if (typeof currentPage !=='undefined' && typeof totalPages !=='undefined' ) { %>
            <div class="pagination">
                <% if (currentPage> 1) { %>
                    <button onclick="changePage(<%= currentPage - 1 %>)">‚Üê Prev</button>
                    <% } %>

                        <% for (let i=1; i <=totalPages; i++) { %>
                            <button onclick="changePage(<%= i %>)" class="<%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </button>
                            <% } %>

                                <% if (currentPage < totalPages) { %>
                                    <button onclick="changePage(<%= currentPage + 1 %>)">Next ‚Üí</button>
                                    <% } %>
            </div>
            <% } %>





    </section>


    <script>
        // ‚úÖ Search Functionality
        document.getElementById('search-button').addEventListener('click', () => {
            const query = document.getElementById('search-input').value.toLowerCase();
            const category = document.getElementById('category-filter').value.toLowerCase();

            document.querySelectorAll('.right').forEach(item => {
                const name = item.querySelector('h2').textContent.toLowerCase();
                if ((name.includes(query) || query === "") && (category === "" || name.includes(category))) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });

        // ‚úÖ Recommended Search
        function fetchRight(right) {
            document.getElementById('search-input').value = right;
            document.getElementById('search-button').click();
        }
        function changePage(page) {
            if (page) {
                window.location.href = `/rights?page=${encodeURIComponent(page)}`;
            }
        }


    </script>