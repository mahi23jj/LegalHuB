<%- layout('/layouts/boilerplate') -%>

<style>
:root {
  --bg-1: #0f1724;
  --card: #0b1220;
  --muted: #94a3b8;
  --accent: #7c3aed;
  --accent-2: #06b6d4;
  --success: #22c55e;
}

.profile-root {
  max-width: 1100px;
  margin: 2rem auto;
  padding: 1rem;
}

.profile-header {
  display: grid;
  grid-template-columns: 280px 1fr;
  gap: 1.5rem;
  margin-bottom: 1.5rem;
}

.card-alt {
  background: var(--card);
  border-radius: 16px;
  padding: 1.5rem;
  box-shadow: 0 8px 30px rgba(0,0,0,0.4);
  color: #fff;
  border: 1px solid rgba(255,255,255,0.05);
}

.card-alt p.muted {
  margin-bottom: 0.75rem;
  font-size: 0.95rem;
  color: var(--muted);
}

.card-alt h2 {
  font-size: 1.3rem;
  font-weight: 600;
  margin-bottom: 1.2rem;
  line-height: 1.4;
  color: #f8fafc;
  background: linear-gradient(to right, var(--accent), var(--accent-2));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.avatar {
  width: 150px;
  height: 150px;
  border-radius: 18px;
  object-fit: cover;
  border: 4px solid rgba(255,255,255,0.06);
}

.verified-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.35rem;
  padding: 0.3rem 0.6rem;
  border-radius: 999px;
  background: linear-gradient(90deg,var(--accent),var(--accent-2));
  font-weight: 600;
  font-size: 0.85rem;
  color: white;
}

.small-badge {
  background: rgba(255,255,255,0.05);
  padding: 0.3rem 0.6rem;
  border-radius: 999px;
  font-size: 0.8rem;
  color: var(--muted);
}

.profile-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-top: 0.75rem;
}

.btn-outline-ghost {
  border: 1px solid rgba(255,255,255,0.06);
  background: transparent;
  padding: 0.45rem 0.75rem;
  border-radius: 8px;
  font-size: 0.9rem;
  cursor: pointer;
}

.danger {
  background: linear-gradient(90deg,#ff6b6b,#ff3b3b);
  border: none;
  color: white;
}

.progress {
  height: 8px;
  border-radius: 8px;
  background: rgba(255,255,255,0.05);
}

.progress-bar {
  height: 100%;
  background: var(--success);
  border-radius: 8px;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(130px,1fr));
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.stat {
  background: rgba(255,255,255,0.04);
  padding: 0.9rem;
  border-radius: 10px;
  transition: transform 0.2s ease, background 0.3s ease;
  text-align: center;
}
.stat:hover { transform: translateY(-3px); background: rgba(255,255,255,0.07); }
.stat .label { font-size: 0.8rem; color: var(--muted); margin-bottom: 0.25rem; }
.stat .num { font-size: 1.1rem; font-weight: 600; color: #f1f5f9; }

.info-list {
  display: grid;
  grid-template-columns: 150px 1fr;
  gap: 0.4rem 1rem;
}
.info-list dt { font-size: 0.9rem; font-weight: 600; color: var(--accent-2); }
.info-list dd { margin: 0 0 0.5rem; font-size: 0.9rem; color: var(--muted); }

.tabs {
  display: flex;
  gap: 1rem;
  border-bottom: 1px solid rgba(255,255,255,0.05);
  margin-bottom: 1rem;
}
.tab { padding: 0.5rem 1rem; cursor: pointer; font-weight: 500; color: var(--muted); }
.tab.active { color: #fff; border-bottom: 2px solid var(--accent); }

@media(max-width: 900px) { .profile-header { grid-template-columns: 1fr; text-align: center; } }
@media(max-width: 600px) { .info-list { grid-template-columns: 1fr; } }

/* Delete modal */
.delete-modal { border-radius: 12px; border: none; box-shadow: 0 10px 35px rgba(0, 0, 0, 0.25); }
.delete-modal .modal-title { font-size: 1.1rem; font-weight: 600; color: #dc3545; }
.delete-modal .modal-body { text-align: center; font-size: 0.95rem; color: #444; padding: 1.2rem; }
.delete-modal .modal-body .highlight { font-weight: 600; color: #dc3545; }
.delete-modal .modal-footer { justify-content: center; gap: 0.8rem; padding: 1rem; border-top: none; }
.delete-modal .cancel-btn { background-color: #f1f1f1; color: #555; border-radius: 8px; padding: 0.45rem 1rem; transition: all 0.2s; }
.delete-modal .cancel-btn:hover { background-color: #e0e0e0; }
.delete-modal .delete-btn { background-color: #dc3545; color: #fff; border-radius: 8px; padding: 0.45rem 1rem; font-weight: 500; transition: all 0.2s; }
.delete-modal .delete-btn:hover { background-color: #c82333; transform: scale(1.03); }
</style>

<div class="profile-root">
  <!-- Profile Header -->
  <div class="profile-header">
    <div class="card-alt" style="text-align:center">
      <img id="avatarImg" class="avatar" src="<%= user.profilePicture || '/pic/profile.jpg' %>" alt="Avatar">
      <h3 style="margin:0.5rem 0"><%= user.username %></h3>

      <div>
        <% if (user.role === 'lawyer') { %>
          <% if (user.lawyerProfile?.isVerified) { %>
            <span class="verified-badge">✔ Verified</span>
          <% } else { %>
            <span class="small-badge">Unverified</span>
          <% } %>
          <span class="small-badge"><%= user.lawyerProfile?.specialization || 'No specialization' %></span>
        <% } else { %>
          <span class="small-badge">General User</span>
        <% } %>
      </div>

      <div class="profile-actions">
        <a class="btn btn-outline-secondary" href="/account/update">Edit Profile</a>

        <% if (user.role === 'lawyer') { %>
          <a class="btn btn-outline-primary" href="/account/update/lawyer">Edit Lawyer</a>
        <% } else { %>
          <a class="btn btn-outline-primary" href="/account/applyforlawyer">Apply for Lawyer</a>
        <% } %>

        <!-- Profile picture upload -->
        <form id="avatarForm" action="/api/users/profile-picture" method="POST" enctype="multipart/form-data" style="display:none;">
          <input type="file" id="avatarInput" name="profilePicture" accept="image/*">
        </form>
        <label for="avatarInput" class="btn btn-outline-ghost">Change Avatar</label>

        <!-- Delete profile picture -->
        <button class="btn btn-outline-ghost danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
      </div>

      <!-- Delete Modal -->
      <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-sm">
          <div class="modal-content delete-modal">
            <form action="/api/users/profile-picture?_method=DELETE" method="POST">
              <div class="modal-header">
                <h5 class="modal-title">Delete Profile Picture</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                Are you sure you want to <span class="highlight">delete</span> your profile picture and reset to default?
              </div>
              <div class="modal-footer">
                <button type="button" class="cancel-btn" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="delete-btn">Delete</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div style="margin-top:1rem">
        <label style="font-size:0.85rem;color:var(--muted)">Profile completeness</label>
        <div class="progress">
          <div id="profileProgress" class="progress-bar" style="width:0%"></div>
        </div>
        <span id="progressText" class="muted" style="font-size:0.95rem;display:block;text-align:right;margin-top:2px;"></span>
      </div>


      <small class="muted">Member since <%= new Date(user.createdAt).toLocaleDateString() %></small>
    </div>

    <!-- Right Column -->
    <div class="card-alt">
      <p class="muted">Email: <strong style="color:#fff"><%= user.email %></strong></p>

      <% if (user.role === 'lawyer') { %>
        <h2 style="margin:0"><%= user.lawyerProfile?.bio || 'No bio provided.' %></h2>

        <div class="stats-grid">
          <div class="stat"><div class="label">Experience</div><div class="num"><%= user.lawyerProfile?.experience ? user.lawyerProfile.experience + ' yrs' : '—' %></div></div>
          <div class="stat"><div class="label">Fees</div><div class="num">₹<%= user.lawyerProfile?.fees || '—' %></div></div>
          <div class="stat"><div class="label">Languages</div><div class="num"><%= user.lawyerProfile?.languagesSpoken?.join(', ') || '—' %></div></div>
        </div>

        <dl class="info-list" style="margin-top:1rem">
          <dt>License number</dt><dd><%= user.lawyerProfile?.licenseNumber || 'Not provided' %></dd>
          <dt>Location</dt><dd><%= user.lawyerProfile?.city || '' %><%= user.lawyerProfile?.city && user.lawyerProfile?.state ? ', ' : '' %><%= user.lawyerProfile?.state || 'Not provided' %></dd>
          <dt>Availability</dt><dd><%= user.lawyerProfile?.availableSlots?.join('; ') || 'Not set' %></dd>
        </dl>
      <% } else { %>
        <h2 style="margin:0">Welcome to LegalHuB</h2>
        <p class="muted">You can manage your chats and appointments here.</p>
      <% } %>
    </div>
  </div>

  <!-- Tabs -->
  <div class="tabs">
    <div class="tab active" data-tab="chats">Chats</div>
    <div class="tab" data-tab="bookings"><%= user.role === 'lawyer' ? 'Client Appointments' : 'My Appointments' %></div>
    <div class="tab" data-tab="settings">Settings</div>
  </div>

  <!-- Tab Content -->
  <div id="tab-chats" class="tab-content">
    <div class="card-alt">
      <h4>Chats</h4>
      <a class="small-badge" href="/chat">Open Chat Inbox</a>
    </div>
  </div>

  <div id="tab-bookings" class="tab-content" style="display:none">
    <div class="card-alt">
      <h4><%= user.role === 'lawyer' ? 'Client Appointments' : 'My Appointments' %></h4>
      <a class="small-badge" href="/api/appointment/bookings">View All</a>
    </div>
  </div>

  <div id="tab-settings" class="tab-content" style="display:none">
    <div class="card-alt">
      <h4>Account Settings</h4>
      <a class="small-badge" href="/account/security">Security</a>
      <a class="small-badge" href="/account/notifications">Notifications</a>
      <a class="small-badge" href="/account/change-password">Change Password</a>
    </div>
  </div>
</div>

<script>
document.querySelectorAll('.tab').forEach(tab => {
  tab.addEventListener('click', () => {
    document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
    document.querySelectorAll('.tab-content').forEach(c => c.style.display = 'none');
    tab.classList.add('active');
    document.getElementById('tab-' + tab.dataset.tab).style.display = 'block';
  });
});

const avatarInput = document.getElementById('avatarInput');
avatarInput.addEventListener('change', e => {
  const file = e.target.files[0];
  if (!file) return;
  const reader = new FileReader();
  reader.onload = ev => document.getElementById('avatarImg').src = ev.target.result;
  reader.readAsDataURL(file);
  document.getElementById('avatarForm').submit();
});

// Profile progress calculation
(function computeProfileProgress(){
  let percent = 0;

  <% if (user.role === 'lawyer') { %>
    <% 
      const lawyerFields = [
        user.username,
        user.email,
        user.profilePicture,
        user.lawyerProfile?.bio,
        user.lawyerProfile?.licenseNumber,
        user.lawyerProfile?.specialization,
        (user.lawyerProfile?.city || user.lawyerProfile?.state)
      ];
      const lawyerScore = lawyerFields.filter(Boolean).length;
      const lawyerTotal = lawyerFields.length;
      const lawyerPercent = Math.round((lawyerScore / lawyerTotal) * 100);
    %>
    percent = <%= lawyerPercent %>;
  <% } else { %>
    <% 
      const userFields = [
        user.username,
        user.email,
        user.profilePicture
      ];
      const userScore = userFields.filter(Boolean).length;
      const userTotal = userFields.length;
      const userPercent = Math.round((userScore / userTotal) * 100);
    %>
    percent = <%= userPercent %>;
  <% } %>

  document.getElementById('profileProgress').style.width = percent + '%';
})();
</script>

